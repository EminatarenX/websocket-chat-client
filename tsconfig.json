{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/context/AppProvider.jsx", "src/components/Layout.jsx", "src/app/messages/Chat.jsx", "src/app/messages/ChatList.jsx", "src/app/messages/Message.jsx", "src/app/messages/[id]/page.jsx", "src/app/messages/ModalNewChat.jsx", "src/app/messages/page.jsx", "src/app/messages/SearchBar.jsx", "src/hooks/useApp.jsx", "src/app/page.jsx", "src/app/layout.jsx"],
  "exclude": ["node_modules"]
}
